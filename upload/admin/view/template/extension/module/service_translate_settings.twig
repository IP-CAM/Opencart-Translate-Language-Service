{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">    

          <legend>{{ general }}</legend>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="st_service">{{ select_service }}</label>
            <div class="col-sm-10">
              <select name="st_service" class="form-control">
                <option value=""></option>
                {% for key,service in services %}
                  <option {{ services[key] }} value="{{ service }}" 
                    {% if service == st_service  %} 
                      selected
                    {% endif %}> {{ key }}
                  </option>
                {% endfor %}
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="st_meta_suffix">{{ meta_title_suffix }}</label>
            <div class="col-sm-10">
              <input type="text" name="st_meta_suffix" value="{{ st_meta_suffix }}" id="st_meta_suffix" class="form-control" />
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="st_meta_from_title">{{ meta_from_title }}</label>
            <div class="col-sm-10">
              <select name="st_meta_from_title" id="st_meta_from_title" class="form-control">
                {% if st_meta_from_title == 'true' %}
                <option value="true" selected="selected">{{ text_enabled }}</option>
                <option value="false">{{ text_disabled }}</option>
                {% else %}
                <option value="true">{{ text_enabled }}</option>
                <option value="false" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="st_translate_description">{{ translate_description }}</label>
            <div class="col-sm-10">
              <select name="st_translate_description" id="st_translate_description" class="form-control">
                {% if st_translate_description == 'true' %}
                <option value="true" selected="selected">{{ text_enabled }}</option>
                <option value="false">{{ text_disabled }}</option>
                {% else %}
                <option value="true">{{ text_enabled }}</option>
                <option value="false" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>

          <legend>{{ itranslate }}</legend>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="st_itranslate_api_key">{{ it_api_key }}</label>
            <div class="col-sm-10">
              <input type="text" name="st_itranslate_api_key" value="{{ st_itranslate_api_key }}" id="st_itranslate_api_key" class="form-control" />
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="st_itranslate_api_version">{{ it_api_version }}</label>
            <div class="col-sm-10">
              <input type="text" name="st_itranslate_api_version" value="{{ st_itranslate_api_version }}" id="st_itranslate_api_version" class="form-control" />
            </div>
          </div>          

          <div class="form-group">
            <div class="col-sm-12">
              <h4>{{ it_lang_sync}}</h4>
            </div>
            {% for oc_lang_key,language in languages %}
            <label class="col-sm-2 control-label" for="st_itranslate_lang[{{ language['language_id'] }}]">{{ language['name'] }}</label>
            <div class="col-sm-10">
              <select name="st_itranslate_lang[{{ language['language_id'] }}]" class="form-control">
                <option value="">{{select_lang}}</option>
                {% for key,itlc in it_language_codes %}
                  <option {{ st_itranslate_lang[oc_lang_key]["name"] }} value="{{ itlc }}" 
                    {% if itlc == st_itranslate_lang[language['language_id']]  %} 
                      selected
                    {% endif %}> {{ key }}
                  </option>
                {% endfor %}
              </select>
            </div>
            {% endfor %}
          </div>
      
        </form>
      </div>
    </div>
  </div>
  <script type="text/javascript"><!--

//--></script></div>
{{ footer }}
